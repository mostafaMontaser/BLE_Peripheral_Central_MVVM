<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:enabled="false"
        app:layout_constraintVertical_bias=".4"
        android:id="@+id/btn_bt_Server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_role_peripheral"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_bt_client"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="@+id/btn_bt_Server"
        app:layout_constraintEnd_toEndOf="@+id/btn_bt_Server"
        android:layout_width="0dp"
        android:text="@string/button_role_central"
        app:layout_constraintTop_toBottomOf="@+id/btn_bt_Server"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/layout_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>